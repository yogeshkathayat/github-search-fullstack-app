{
  "openapi": "3.0.1",
  "info": {
    "title": "Github Search",
    "description": "This is a github search application to search users and repository",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    },
    {
      "url": "http://34.70.164.151/:3000/api"
    }
  ],
  "tags": [
    {
      "name": "search",
      "description": "search user or repository"
    },
    {
      "name": "clear-cache",
      "description": "clear all cache data"
    }
  ],
  "paths": {
    "/search": {
      "post": {
        "tags": ["search"],
        "summary": "search a user or repository on github",
        "operationId": "search",
        "requestBody": {
          "description": "search and type",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchRequest"
              },
              "examples": {
                "User": {
                  "value": {
                    "type": "user",
                    "search": "tradeling"
                  }
                },
                "Repository": {
                  "value": {
                    "type": "repository",
                    "search": "tradeling"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Bad Request",
            "content": {}
          },
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "$ref": "#/components/schemas/User"
                      },
                      {
                        "$ref": "#/components/schemas/Repository",
                        "example": {
                          "id": 219148951,
                          "name": "coding-task-devops",
                          "full_name": "tradeling/coding-task-devops",
                          "private": false,
                          "owner_login": "tradeling",
                          "owner_html_url": "https://github.com/tradeling",
                          "owner_avatar_url": "https://avatars2.githubusercontent.com/u/55567995?v=4",
                          "html_url": "https://github.com/tradeling/coding-task-devops",
                          "description": "Coding Task for DevOps @tradeling",
                          "size": 43,
                          "stargazers_count": 2,
                          "watchers_count": 2,
                          "language": "JavaScript",
                          "forks_count": 9,
                          "open_issues_count": 0,
                          "forks": 9,
                          "open_issues": 0,
                          "watchers": 2
                        }
                      }
                    ]
                  }
                },
                "examples": {
                  "User": {
                    "value": [
                      {
                        "id": 55567995,
                        "login": "tradeling",
                        "url": "https://api.github.com/users/tradeling",
                        "type": "Organization",
                        "name": "Tradeling",
                        "html_url": "https://github.com/tradeling",
                        "avatar_url": "https://avatars2.githubusercontent.com/u/55567995?v=4",
                        "company": null,
                        "blog": "https://tradeling.com",
                        "location": "Dubai, UAE",
                        "email": "tech@tradeling.com",
                        "public_repos": 3,
                        "public_gists": 0,
                        "followers": 0,
                        "following": 0
                      }
                    ]
                  },
                  "Repository": {
                    "value": [
                      {
                        "id": 219148951,
                        "name": "coding-task-devops",
                        "full_name": "tradeling/coding-task-devops",
                        "private": false,
                        "owner_login": "tradeling",
                        "owner_html_url": "https://github.com/tradeling",
                        "owner_avatar_url": "https://avatars2.githubusercontent.com/u/55567995?v=4",
                        "html_url": "https://github.com/tradeling/coding-task-devops",
                        "description": "Coding Task for DevOps @tradeling",
                        "size": 43,
                        "stargazers_count": 2,
                        "watchers_count": 2,
                        "language": "JavaScript",
                        "forks_count": 9,
                        "open_issues_count": 0,
                        "forks": 9,
                        "open_issues": 0,
                        "watchers": 2
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/clear-cache": {
      "get": {
        "tags": ["clear-cache"],
        "summary": "clear data from cache",
        "operationId": "clear-cache",
        "responses": {
          "200": {
            "description": "Success",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SearchRequest": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "type of search",
            "enum": ["repository", "user"]
          },
          "search": {
            "description": "search keyword",

            "type": "string"
          }
        }
      },

      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "html_url": {
            "type": "string"
          },
          "avatar_url": {
